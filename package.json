{
  "name": "api-codegen-runner",
  "version": "0.1.0",
  "description": "基于模板的 API 代码生成工具，支持 OpenAPI 和 Apifox",
  "keywords": [
    "api",
    "codegen",
    "generator",
    "openapi",
    "swagger",
    "apifox",
    "typescript",
    "axios",
    "fetch",
    "ejs",
    "template",
    "cli",
    "vite-plugin"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "api-codegen-runner": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "templates",
    "LICENSE"
  ],
  "author": "XSIJIE975",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/XSIJIE975/api-codegen-runner.git",
    "directory": "packages/api-codegen-runner"
  },
  "homepage": "https://github.com/XSIJIE975/api-codegen-runner#readme",
  "bugs": {
    "url": "https://github.com/XSIJIE975/api-codegen-runner/issues"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix",
    "format": "prettier --write .",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "peerDependencies": {
    "vite": ">=5.0.0"
  },
  "dependencies": {
    "api-codegen-universal": "^0.4.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "ejs": "^3.1.10",
    "fs-extra": "^11.3.2",
    "inquirer": "^13.0.1",
    "prettier": "^3.7.3",
    "unconfig": "^7.4.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.1",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^5.4.21"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
